<Window x:Class="WpfHandGazeDistance.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfHandGazeDistance"
        mc:Ignorable="d"
        Title="MainWindow" Height="700" Width="1000">
    <Grid>
        <Button DataContext="{Binding BeGazeViewModel}" Command="{Binding LoadCommand}" Content="Load BeGaze" HorizontalAlignment="Left" Margin="55,22,0,0" VerticalAlignment="Top" Width="95"/>
        <TextBox DataContext="{Binding BeGazeViewModel}" HorizontalAlignment="Left" Height="23" Margin="187,21,0,0" TextWrapping="Wrap" Text="{Binding BeGazePath}" VerticalAlignment="Top" Width="483"/>

        <Button DataContext="{Binding VideoViewModel}" Command="{Binding LoadCommand}" Content="Load Video" HorizontalAlignment="Left" Margin="55,62,0,0" VerticalAlignment="Top" Width="95"/>
        <TextBox DataContext="{Binding VideoViewModel}" HorizontalAlignment="Left" Height="23" Margin="187,61,0,0" TextWrapping="Wrap" Text="{Binding VideoPath}" VerticalAlignment="Top" Width="483"/>

        <Button DataContext="{Binding MainViewModel}" Command="{Binding AnalyseCommand}" Content="Analyse Data" HorizontalAlignment="Left" Margin="55,98,0,0" VerticalAlignment="Top" Width="95"/>

        <!-- Prototyping Corner starts here -->
        <Image DataContext="{Binding PrototypingViewModel}" Source="{Binding InputBitmap}"  HorizontalAlignment="Left" Height="398" Margin="55,237,0,0" VerticalAlignment="Top" Width="425"/>
        <Image DataContext="{Binding PrototypingViewModel}" Source="{Binding OutputBitmap}" HorizontalAlignment="Left" Height="398" Margin="513,237,0,0" VerticalAlignment="Top" Width="457"/>
        <Button DataContext="{Binding PrototypingViewModel}" Command="{Binding LoadImageCommand}" Content="Load Image" HorizontalAlignment="Left" Margin="55,187,0,0" VerticalAlignment="Top" Width="95"/>
        <Button DataContext="{Binding PrototypingViewModel}" Command="{Binding AnalyseCommand}" Content="Process Image" HorizontalAlignment="Left" Margin="513,187,0,0" VerticalAlignment="Top" Width="95" RenderTransformOrigin="2.558,0.636"/>

        <Button DataContext="{Binding PrototypingViewModel}" Command="{Binding SubtractCommand}" Content="-" HorizontalAlignment="Left" Margin="790,184,0,0" VerticalAlignment="Top" Width="23"/>
        <Button DataContext="{Binding PrototypingViewModel}" Command="{Binding AddCommand}" Content="+" HorizontalAlignment="Left" Margin="945,184,0,0" VerticalAlignment="Top" Width="23"/>
        <TextBox DataContext="{Binding PrototypingViewModel}" Text="{Binding ImageIndex, StringFormat=Index: \{0\}}" HorizontalAlignment="Left" Height="23" Margin="829,184,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="99"/>
        <TextBox DataContext="{Binding PrototypingViewModel}" Text="{Binding NumberOfHands, StringFormat=Number of Hands: \{0\}}" HorizontalAlignment="Left" Height="23" Margin="629,187,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="139"/>
        <TextBox DataContext="{Binding PrototypingViewModel}" Text="{Binding Distance, StringFormat=Distance to Hands: \{0\}}" HorizontalAlignment="Left" Height="21" Margin="629,151,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="184"/>
    </Grid>
</Window>
