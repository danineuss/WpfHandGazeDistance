<Window x:Class="WpfHandGazeDistance.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfHandGazeDistance"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="734.213">
    <Grid>
        <Button DataContext="{Binding BeGazeViewModel}" Command="{Binding LoadCommand}" Content="Load BeGaze" HorizontalAlignment="Left" Margin="62,81,0,0" VerticalAlignment="Top" Width="95"/>
        <TextBox DataContext="{Binding BeGazeViewModel}" HorizontalAlignment="Left" Height="23" Margin="194,80,0,0" TextWrapping="Wrap" Text="{Binding BeGazePath}" VerticalAlignment="Top" Width="483"/>

        <Button DataContext="{Binding VideoViewModel}" Command="{Binding LoadCommand}" Content="Load Video" HorizontalAlignment="Left" Margin="62,121,0,0" VerticalAlignment="Top" Width="95"/>
        <TextBox DataContext="{Binding VideoViewModel}" HorizontalAlignment="Left" Height="23" Margin="194,120,0,0" TextWrapping="Wrap" Text="{Binding VideoPath}" VerticalAlignment="Top" Width="483"/>
        
        <Button Command="{Binding AnalyseCommand}" Content="Analyse Data" HorizontalAlignment="Left" Margin="62,192,0,0" VerticalAlignment="Top" Width="95"/>
    </Grid>
</Window>
